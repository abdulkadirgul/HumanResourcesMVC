@model IEnumerable<Project.ENTİTİES.Models.Employee>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Administrator/Views/Shared/_AdminLayout.cshtml";
}

<script>
    function printDiv(divName) {
        var printContents = document.getElementById(divName).innerHTML;
        var originalContents = document.body.innerHTML;



        document.body.innerHTML = printContents;



        window.print();



        document.body.innerHTML = originalContents;



    }
</script>

<div>
    <div class="card-header">
        <h2>Çalışanlar</h2>
    </div>
    <div id="printMe">
        
        <table class="table table-striped table-bordered" id="example-table">
            <thead>
                <tr>
                    <th>Personel Adı-Soyadı</th>
                    <th>TC Kimlik No</th>
                    <th>SGK No</th>
                    <th>İşe Başlama Tarihi</th>
                    <th>Giriş Zamanı</th>
                    <th>Çıkış Zamanı</th>
                    <th> Durumu </th>
                    <th><i class=" icon-edit"></i> Düzenleme</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var calisan in Model)
                {
                    <tr>

                        <td>@calisan.FirstName @calisan.LastName  </td>
                        <td>@calisan.TCKNo</td>
                        <td>@calisan.SGKNo</td>
                        <td>@calisan.İseBaslama</td>
                        <td>@calisan.CheckInTime</td>
                        <td>@calisan.CheckInOutTime</td>
                        <td>@calisan.Status</td>

                        <td>

                            @Html.ActionLink("Düzenle", "Edit", new { id = calisan.ID }) |
                            @Html.ActionLink("Detaylar", "Details", new { id = calisan.ID }) |
                            @Html.ActionLink("Sil", "Delete", new { id = calisan.ID })
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <button type="button" class="btn btn-primary" onclick="printDiv('printMe')" style="margin-right" >
            Yazdır
        </button>
    </div>
    <h3 class="text-info">
        @Html.ActionLink("Yeni Çalışan Ekle", "Create")
    </h3>

</div>