@model IEnumerable<Project.ENTİTİES.Models.ExtraWorktime>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Administrator/Views/Shared/_AdminLayout.cshtml";
}


<script>
    function printDiv(divName) {
        var printContents = document.getElementById(divName).innerHTML;
        var originalContents = document.body.innerHTML;



        document.body.innerHTML = printContents;



        window.print();



        document.body.innerHTML = originalContents;



    }
</script>

<div>
    <div class="card-header">
        <h2>Mesailer</h2>
    </div>
    <div id="printMe">

        <table class="table table-striped table-bordered" id="example-table">
            <thead>
                <tr>
                    <th>Mesai Başlama</th>
                    <th>Mesai Bitiş </th>
                    <th>Personel Adı-Soyadı</th>
                    <th>TC Kimlik No</th>
                    <th>SGK No</th>
                    <th>Oluşturma Zamanı</th>
                    <th> Durumu </th>
                    <th><i class=" icon-edit"></i> Düzenleme</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var mesai in Model)
                {
                    <tr>

                        <td>@mesai.StartDate</td>
                        <td>@mesai.EndTime</td>
                        <td>@mesai.Employee.FirstName @mesai.Employee.LastName</td>
                        <td>@mesai.Employee.TCKNo </td>
                        <td>@mesai.Employee.SGKNo</td>
                        <td>@mesai.CreatedDate</td>
                        <td>@mesai.Status</td>

                        <td>

                            @Html.ActionLink("Düzenle", "Edit", new { id = mesai.ID }) |
                            @Html.ActionLink("Detaylar", "Details", new { id = mesai.ID }) |
                            @Html.ActionLink("Sil", "Delete", new { id = mesai.ID })
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <button type="button" class="btn btn-primary" onclick="printDiv('printMe')" style="margin-right">
            Yazdır
        </button>
    </div>
    <h2>
        @Html.ActionLink("Yeni Mesai Ekle", "Create")
    </h2>

</div>
