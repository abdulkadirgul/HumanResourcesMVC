@model IEnumerable<Project.ENTİTİES.Models.AllowRequest>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Administrator/Views/Shared/_AdminLayout.cshtml";
}

<p>
    @Html.ActionLink("Yeni İzin Ekle", "Create")
</p>


<div>
    <div class="card-header">
        <h2>İzinler</h2>
    </div>
    <div>
        <table class="table table-striped table-bordered" id="example-table">
            <thead>
                <tr>
                    <th>Personel Adı-Soyadı</th>
                    <th>TC Kimlik No</th>
                    <th>İzin Tipi</th>
                    <th>Başlama Tarihi</th>
                    <th>Bitiş Tarihi</th>
                    <th>Toplam Süre</th>
                    <th> Açıklama</th>
                    <th> Durumu </th>
                    <th><i class=" icon-edit"></i> Düzenleme</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var izin in Model)
                {
                <tr>

                    <td>@izin.Employee.FirstName @izin.Employee.LastName  </td>
                    <td>@izin.Employee.TCKNo</td>
                    <td>@izin.AllowType</td>
                    <td>@izin.StartDate</td>
                    <td>@izin.EndDate</td>
                    <td>@izin.TotalAllowTime</td>
                    <td>@izin.Description</td>
                    <td>@izin.State</td>
                    <td>

                        @Html.ActionLink("Düzenle", "Edit", new { id = izin.ID }) |
                        @Html.ActionLink("Detaylar", "Details", new { id = izin.ID }) |
                        @Html.ActionLink("Sil", "Delete", new { id = izin.ID })
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>